<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rottenapp"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.rottenapp.data.Global"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rottenapp.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rottenapp.activities.FavouritesActivity"
            android:label="@string/title_activity_favourites" >
        </activity>
        <activity
            android:name="com.rottenapp.activities.MovieActivity"
            android:label="@string/title_activity_movie" >
        </activity>
        <activity
            android:name="com.rottenapp.activities.FullImageActivity"
            android:label="@string/title_activity_full_image"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
            >
        </activity>
        <activity
            android:name="com.rottenapp.activities.ListActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.rottenapp.activities.CriticsActivity"
            android:label="@string/title_activity_critics" >
        </activity>
        <activity
            android:name="com.rottenapp.activities.CastActivity"
            android:label="@string/title_activity_cast" >
        </activity>
        <activity
            android:name="com.rottenapp.activities.SimilarActivity"
            android:label="@string/title_activity_similar" >
        </activity>
        <activity
            android:name="com.rottenapp.activities.PreferencesActivity"
            android:label="@string/action_settings" >
        </activity>
    </application>

</manifest>
